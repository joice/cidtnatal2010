!!! XML
!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title
      IV Congresso Internacional de Direito do Trabalho
      - if page.title
        \-
        = page.title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    - %w{reset text 960 style sifr}.each do |style|
      %link{:href => "css/#{style}.css", :rel => 'stylesheet'}
    / [if IE]><link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" /><![endif]

  %body
    #header
      %div{:class => "container_12 #{layout_type}"}
        .grid_4
          %h1
            %a.notext(href='index')
              IV Congresso Internacional de Direito do Trabalho
        #balanca.grid_6.prefix_1 
          %img{ :src => "images/theme/balanca.png", :alt => "IV CIDT - Congresso Internacional de Direito do Trabalho" }
        #menu.grid_12
          %ul
            - site.posts.each do |post|
              %li{:class => "#{'current' if (page.title == post.title)}"}
                %a{ :href => post.url}= post.title
        #container.grid_12
          #banner.grid_12
            %img{ :src => "images/theme/banner.jpg", :alt => "SERHS NATAL GRAND HOTEL" }
          #content.grid_12
            - if layout_type == 'internal_page'
              #title
                %h2= page.title
                %hr
              = content
            - else
              #index-main.grid_8.alpha
                #title
                  %h2= page.title
                  %hr
                = content
              #index-sidebar.grid_4.omega


          #footer.grid_12
            .grid_2.alpha
              %ul
                %li
                  %a{ :href => '/inscricao.html#inscricao'}  Inscrição
                %li
                  %a{ :href => '/programacao.html#programacao'} Programação
                %li
                  %a{ :href => '/local-do-evento.html#local-evento'}  Local do Evento
                %li
                  %a{ :href => '/local-do-evento.html#conheca-natal'} Conheça Natal
                %li
                  %a{ :href => '/agencia-oficial.html#agencia-turismo'}  Agência Oficial
                %li
                  %a{ :href => '/contato.html#sobre-amatra'}  Sobre Amatra
            .grid_2
              %ul
                %li
                  %a{ :href => '/inscricao.html#inscricao'}  Inscrição
                %li
                  %a{ :href => '/programacao.html#programacao'} Programação
                %li
                  %a{ :href => '/local-do-evento.html#local-evento'}  Local do Evento
                %li
                  %a{ :href => '/local-do-evento.html#conheca-natal'} Conheça Natal
                %li
                  %a{ :href => '/agencia-oficial.html#agencia-turismo'}  Agência Oficial
                %li
                  %a{ :href => '/contato.html#sobre-amatra'}  Sobre Amatra
            #sponsor.grid_8.omega
              #promocao.grid_3.alpha
                %h5 PROMOÇÃO
                %a#amatra{ :class => "notext", :href => "#" } AMATRA
                %a#trt{ :class => "notext", :href => "#" } TRT XXI RN
              #apoio.grid_3
                %h5 APOIO
                %a#natal{ :class => "notext", :href => "http://natal.rn.gov.br" } Prefeitura do Natal
                %a#rn{ :class => "notext", :href => "http://rn.gov.br" } Governo do Estado do RN
              #organizacao.grid_2.omega
                %h5 ORGANIZAÇÃO
                %a#ideias{ :class => "notext", :href => "http://ideiaseventos.com.br" } Idéias Eventos
        #copyright.grid_12
          Todos os direitos reservados ao IV Congresso Internacional de Direito do Trabalho
          %br
          %a{ :href => "mailto:cidtnatal2010@ideiaseventos.com.br" } cidtnatal2010@ideiaseventos.com.br
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js', :type => 'text/javascript' }
    - %w{sifr sifr-config jquery.tools.min theme gridder}.each do |js|
      %script{ :src => "js/#{js}.js", :type => 'text/javascript'}
